@using Newtonsoft.Json
@using Newtonsoft.Json.Linq

@{
    ViewData["Title"] = "Current pending items";
    Layout = "~/Views/Shared/_Layout.cshtml";
    //get the active rounds  rounds
    List<Round> allRounds = new List<Round>();
    string[] lines = System.IO.File.ReadAllLines(@"D:\data.txt");
    foreach (string line in lines)
    {
        Round currentProcessRound = JsonConvert.DeserializeObject<Round>(line);
        if (currentProcessRound.active)
        {
            allRounds.Add(currentProcessRound);
        }
    }

}


