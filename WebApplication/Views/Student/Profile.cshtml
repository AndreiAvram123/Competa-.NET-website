@{
    ViewData["Title"] = "Student profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
    StudentModel studentModel = (StudentModel) ViewData["Student"];
}
<div class="text-center custom-card">
    <h5 class="card-title">Firstname: </h5>
    <p class="card-text">@studentModel.FirstName</p>
</div>
<div class="text-center custom-card">
    <h5 class="card-title">Lastname: </h5>
    <p class="card-text">@studentModel.LastName</p>
</div>
<div class="text-center custom-card">
    <h5 class="card-title">Password: </h5>
    <div>
        <button type="button" class="btn btn-primary text-center" data-target="#confirmationModal" data-toggle="modal">Change password</button>
    </div>
</div>
<div class="text-center custom-card">
    <h5 class="card-title">E-mail: </h5>
    <p class="card-text">@studentModel.Email</p>
</div>
<div class="text-center custom-card">
    <h5 class="card-title">Date of birth: </h5>
    <p class="card-text">@studentModel.DateOfBirth</p>
</div>
<!-- Modal -->
<div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method ="post" onsubmit="return isChangePasswordModalValid()" action="@Url.Action("SubmitPasswordChange", "Student")">
            <div class="modal-body">
                <div class="form-group">
                        <label for="confirmPasswordField">Password</label>
                        <input type="password" class="form-control" id="confirmPasswordField" name="passwordField">
                    </div>
                    <div class="form-group">
                        <label for="confirmPasswordField2">Confirm password</label>
                        <input type="password" class="form-control" id="confirmPasswordField2">
                    </div>
               <div class="alert alert-danger" style="visibility: hidden" role="alert">
               </div>     
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-danger" >Confirm</button>
            </div>
            </form>
        </div>
    </div>
</div>