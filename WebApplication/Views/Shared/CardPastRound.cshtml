@{
    RoundModel round = (RoundModel) ViewData["Round"];
    int grade = (int) ViewData["Grade"];
}

<div class="col mt-3" style="padding: 2rem">
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title text-center">@round.ModuleName</h5>
            <p class="text-center"><strong>Deadline : @round.Deadline</strong></p>
            <!--Display the color of the card accordingly to the grade-->
            <div class="progress">
                @{
                    if (grade <4)
                    {
                        <!--Display red progressBar-->
                        <div class="progress-bar" role="progressbar" style="width: @grade%;background: red" aria-valuenow="25"
                             aria-valuemin="0" aria-valuemax="100"><strong>@grade%/8</strong></div>
                    }else if (grade >= 4 && grade <= 6)
                    {
                        <!--Display yellow progressBar-->
                        <div class="progress-bar" role="progressbar" style="width: @grade%;background: #EDBE01;color: black!important;" aria-valuenow="25"
                             aria-valuemin="0" aria-valuemax="100"><strong>@grade%/8</strong></div>
                    }
                    else
                    {
                        <!--Display green progressBar-->
                        <div class="progress-bar" role="progressbar" style="width: @grade%;background: green" aria-valuenow="25"
                             aria-valuemin="0" aria-valuemax="100"><strong>@grade%/8</strong></div> 
                    }
                }
                
            </div>
        </div>
    </div>
</div>